{
  "extends": "gulp",
  "env": {
    "mocha": true
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": [
      2,
      {
        "version": ">=18.5.0",
        "ignores": ["classes"]
      }
    ],
    "block-scoped-var": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-statements": [1, 30],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-unused-vars": 1,
  }
}
